{% extends 'base.html.twig' %}

{% block title %}{{ category|title }} - Annuaire Locallo{% endblock %}

{% block body %}
<div class="container mt-4">
    {# Fil d'Ariane #}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('annuaire.index') }}">Annuaire</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ category|title }}</li>
        </ol>
    </nav>

    {# Messages contextuels selon le type d'utilisateur #}
    {% if display_mode == 'visitor' %}
        <div class="alert alert-info">
            <h4>Catégorie : {{ category|title }}</h4>
            <p>Vous consultez cette catégorie en tant que visiteur. <a href="/login">Connectez-vous</a> pour une expérience personnalisée.</p>
        </div>
    {% elseif display_mode == 'authenticated_no_geolocation' %}
        <div class="alert alert-warning">
            <h4>Catégorie : {{ category|title }}</h4>
            <p>Pour voir les services les plus proches de chez vous, <a href="/profile/location">renseignez votre localisation</a>.</p>
        </div>
    {% elseif display_mode == 'authenticated_geolocated' %}
        <div class="alert alert-success">
            <h4>{{ category|title }} près de chez vous</h4>
            <p>Services dans la catégorie "{{ category|title }}" à proximité de {{ user_location }}</p>
        </div>
    {% endif %}

    <h2>Sous-catégories de {{ category|title }}</h2>
    
    {% if subcategories is empty %}
        <div class="alert alert-warning">
            <p>Aucune sous-catégorie trouvée pour "{{ category|title }}".</p>
        </div>
    {% else %}
        <div class="row">
            {% for subcategory in subcategories %}
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ subcategory.name|title }}</h5>
                            <p class="card-text">{{ subcategory.description }}</p>
                            
                            {% if display_mode == 'authenticated_geolocated' %}
                                <small class="text-muted">{{ subcategory.serviceCount }} services à proximité</small>
                            {% else %}
                                <small class="text-muted">{{ subcategory.serviceCount }} services disponibles</small>
                            {% endif %}
                            
                            <br><br>
                            <a href="{{ path('annuaire.subcategory', {category: category, subcategory: subcategory.slug}) }}" 
                               class="btn btn-primary">
                                Voir les services
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    {# Bouton retour #}
    <div class="mt-4">
        <a href="{{ path('annuaire.index') }}" class="btn btn-secondary">
            ← Retour à l'annuaire
        </a>
    </div>
</div>
{% endblock %}
